---
import BaseLayout from "./BaseLayout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import Footer from "../components/Footer.astro";
import type { NavLink } from "../types";

interface Props {
  title: string;
  description: string;
  favicon?: string;
  logoLabel: string;
  navLinks: NavLink[];
}

const { title, description, favicon = "", logoLabel, navLinks } = Astro.props;
---

<BaseLayout title={title} description={description} favicon={favicon}>
  <SiteHeader favicon={favicon} logoLabel={logoLabel} navLinks={navLinks} />
  <main class="max-w-212 mx-auto px-6">
    <slot />
  </main>
  <Footer />
</BaseLayout>
