---
interface Props {
  href: string;
  label: string;
  external?: boolean;
  class?: string;
}

const { href, label, external = false, class: className } = Astro.props;
const normalizedLabel = label.toLowerCase();
---

<a
  href={href}
  class:list={["nav-link", className]}
  {...external ? { target: "_blank", rel: "noopener noreferrer" } : {}}
>
  <span class="nav-icon" aria-hidden="true">
    <span class="nav-icon-shaft"></span>
  </span>
  {normalizedLabel}
</a>
